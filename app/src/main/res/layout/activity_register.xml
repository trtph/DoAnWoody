<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"

        android:gravity="center"
        android:layout_marginTop="15dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtLayoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRegister">
        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Name"
            android:textSize="20sp"

            android:background="@drawable/custom_email_password"
            android:inputType="textEmailAddress"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_margin="10dp"
            android:paddingLeft="10dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtLayoutEmailPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtLayoutName">
        <EditText
            android:id="@+id/edtEmailPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email/Phone number"
            android:textSize="20sp"
            android:password="true"

            android:background="@drawable/custom_email_password"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            tools:ignore="Deprecated" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinueRegister"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="30dp"
        android:layout_marginTop="12dp"
        android:text="Continue"

        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        app:cornerRadius="15dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtLayoutEmailPhone"/>
    <TextView
        android:id="@+id/txtAlready"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"

        android:gravity="start"

        app:layout_constraintTop_toBottomOf="@id/btnContinueRegister"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/txtBackLogin"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"

        android:gravity="end"
        android:layout_marginRight="30dp"

        app:layout_constraintTop_toBottomOf="@id/btnContinueRegister"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp"/>
    <View
        android:id="@+id/vLeft"
        android:layout_width="150dp"
        android:layout_height="0.5dp"
        android:background="@color/black"
         app:layout_constraintTop_toBottomOf="@id/txtAlready"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="OR"
        android:textSize="25sp"
        android:textStyle="italic"

        app:layout_constraintRight_toRightOf="@id/vRight"
        app:layout_constraintLeft_toLeftOf="@id/vLeft"
        app:layout_constraintTop_toBottomOf="@+id/txtAlready"
        android:layout_marginTop="40dp"/>

    <View
        android:id="@+id/vRight"
        android:layout_width="150dp"
        android:layout_height="0.5dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txtBackLogin"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>