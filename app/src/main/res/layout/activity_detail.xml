<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imvThumb"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="-40dp"
            android:layout_marginTop="-40dp"
            app:riv_corner_radius="55dp"/>

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Decoration"
            android:fontFamily="@font/mavenpro_bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="105dp"
                android:fontFamily="@font/mavenpro_extrabold"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="$ 99.99"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/Gray61"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/add_quantity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_add"/>
            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="24sp"
                android:layout_marginStart="8dp"/>
            <ImageView
                android:id="@+id/remove_quantity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_remove"
                android:layout_marginStart="8dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp">

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:isIndicator="false"
                android:numStars="5"
                android:progressTint="#FFC107"/>

            <TextView
                android:id="@+id/txtRvNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(20 reviews)"
                android:fontFamily="@font/mavenpro_regular"
                android:textSize="16sp"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/mavenpro_regular"
            android:justificationMode="inter_word"
            android:textSize="16sp"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <com.google.android.material.button.MaterialButton
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:text="Add to cart"
                app:cornerRadius="15dp"
                android:textSize="20sp"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_favorite"/>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>