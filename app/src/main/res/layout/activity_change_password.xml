<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity">
    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create password"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/mavenpro_bold"

        android:gravity="center"
        android:layout_marginTop="15dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/imvLogoWoody"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/woodylogo"

        android:layout_marginTop="20dp"

        app:layout_constraintTop_toBottomOf="@id/txtLogin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtLayoutNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imvLogoWoody"
        app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/edtPassCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password"
            android:textSize="20sp"
            android:password="true"
            android:fontFamily="@font/nunitosans_semibold"

            android:background="@drawable/custom_email_password"

            app:layout_constraintTop_toBottomOf="@id/imvLogoWoody"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            tools:ignore="Deprecated" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtLayoutCreatePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtLayoutNewPassword"
        app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/edtConfirmPasswordCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:textSize="20sp"
            android:password="true"
            android:fontFamily="@font/nunitosans_semibold"

            android:background="@drawable/custom_email_password"

            app:layout_constraintTop_toBottomOf="@id/edtConfirmPasswordCreate"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            tools:ignore="Deprecated" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreatePassword"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="30dp"
        android:backgroundTint="@color/black"

        android:text="Create password"
        android:fontFamily="@font/mavenpro_regular"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtLayoutCreatePassword"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>